    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;

        // Precios combustibles para calculadora
        const preciosCombustibles = {
            'gasoleo': 0.127,
            'gas': 0.082,
            'propano': 0.223,
            'electricidad': 0.200,
            'pellets': 0.063
        };

        const subvenciones = {
            'hotel': { porcentaje: 35, maximo: 50000 },
            'comunidad': { porcentaje: 70, maximo: 80000 },
            'ayuntamiento': { porcentaje: 60, maximo: 200000 },
            'industria': { porcentaje: 40, maximo: 100000 }
        };

        function updateSlideDisplay() {
            slides.forEach((slide, index) => {
                slide.classList.remove('active');
                if (index === currentSlide) {
                    slide.classList.add('active', 'fade-in');
                }
            });

            // Actualizar contador
            document.getElementById('slideCounter').textContent = `${currentSlide + 1} / ${totalSlides}`;

            // Actualizar barra de progreso
            const progress = ((currentSlide + 1) / totalSlides) * 100;
            document.getElementById('progressBar').style.width = progress + '%';

            // Actualizar botones navegaci√≥n
            document.getElementById('prevBtn').disabled = currentSlide === 0;
            document.getElementById('nextBtn').disabled = currentSlide === totalSlides - 1;
        }

        function changeSlide(direction) {
            const newSlide = currentSlide + direction;
            if (newSlide >= 0 && newSlide < totalSlides) {
                currentSlide = newSlide;
                updateSlideDisplay();
            }
        }

        function calcularROIPresentation() {
            const combustible = document.getElementById('combustible-calc').value;
            const costeAnual = parseFloat(document.getElementById('coste-calc').value);
            const superficie = parseFloat(document.getElementById('superficie-calc').value);
            const tipo = document.getElementById('tipo-calc').value;

            if (!combustible || !costeAnual || !superficie || !tipo) {
                return;
            }

            // C√°lculos ROI
            const kwhAnuales = costeAnual / preciosCombustibles[combustible];
            const costePelletsAnual = kwhAnuales * preciosCombustibles.pellets;
            const ahorroAnual = costeAnual - costePelletsAnual;
            const ahorroPorcentual = (ahorroAnual / costeAnual) * 100;

            const factoresInversion = {
                'hotel': 120,
                'comunidad': 80,
                'ayuntamiento': 100,
                'industria': 90
            };

            const inversionEstimada = superficie * factoresInversion[tipo];
            const subvencion = Math.min(
                inversionEstimada * (subvenciones[tipo].porcentaje / 100),
                subvenciones[tipo].maximo
            );

            const inversionNeta = inversionEstimada - subvencion;
            const roiA√±os = inversionNeta / ahorroAnual;
            const ahorro10A√±os = ahorroAnual * 10;

            // Actualizar resultados
            document.getElementById('ahorro-calc').textContent = formatCurrency(ahorroAnual);
            document.getElementById('porcentaje-calc').textContent = Math.round(ahorroPorcentual) + '%';
            document.getElementById('roi-calc').textContent = roiA√±os.toFixed(1) + ' a√±os';
            document.getElementById('ahorro-10-calc').textContent = formatCurrency(ahorro10A√±os);
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('es-ES', {
                style: 'currency',
                currency: 'EUR',
                maximumFractionDigits: 0
            }).format(amount);
        }

        function contactarComercial() {
            window.open('https://wa.me/34600000000?text=Hola,%20me%20interesa%20informaci√≥n%20sobre%20Naturepellets%20tras%20ver%20la%20presentaci√≥n', '_blank');
        }

        function solicitarEstudioFinal() {
            alert('¬°Perfecto! Te contactaremos en 24 horas para programar tu estudio t√©cnico gratuito.\n\n‚úì An√°lisis personalizado\n‚úì C√°lculo exacto ROI\n‚úì Gesti√≥n subvenciones\n‚úì Sin compromiso');
        }

        function calcularAhorro() {
            // Ir a la slide de la calculadora
            currentSlide = 7; // Slide 8 (√≠ndice 7)
            updateSlideDisplay();
        }

        // Navegaci√≥n por teclado
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowLeft') changeSlide(-1);
            if (e.key === 'ArrowRight') changeSlide(1);
            if (e.key === 'Home') { currentSlide = 0; updateSlideDisplay(); }
            if (e.key === 'End') { currentSlide = totalSlides - 1; updateSlideDisplay(); }
        });

        // Inicializar
        updateSlideDisplay();

        // Auto-avance opcional (comentado por defecto)
        // setInterval(function() {
        //     if (currentSlide < totalSlides - 1) {
        //         changeSlide(1);
        //     }
        // }, 15000); // Cambiar cada 15 segundos
    </script>
